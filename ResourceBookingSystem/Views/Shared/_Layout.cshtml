<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResourceBookingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ResourceBookingSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: #111;">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                <img src="~/images/logo.png" alt="Site Logo" style="height:40px;vertical-align:middle;" class="me-2" />
                <span class="fw-bold text-gold">Resource Booking System</span>
            </a>
            <div class="navbar-nav">
                <a class="nav-item nav-link text-gold" asp-controller="Resources" asp-action="Index">View Resources</a>
                <a class="nav-item nav-link text-gold" asp-controller="Bookings" asp-action="Index">View Bookings</a>
                <a class="nav-item nav-link text-gold" asp-controller="Resources" asp-action="Create">Add Resource</a>
                <a class="nav-item nav-link text-gold" asp-controller="Bookings" asp-action="Create">Add Booking</a>
                <a class="nav-item nav-link text-gold" asp-controller="Home" asp-action="Index">Dashboard</a>
            </div>
        </nav>
    </header>
    <div class="container bg-grey rounded py-4 text-white">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-gold text-center">
        <div class="container text-center">
            &copy; 2025 - ResourceBookingSystem - <a class="text-gold" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
